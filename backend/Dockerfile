FROM node:18-alpineWORKDIR /appCOPY package*.json ./RUN npm ci --only=productionCOPY src ./srcEXPOSE 3000HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 CMD node -e "require('http').get('http://localhost:3000/health',(r)=>{if(r.statusCode!==200)throw new Error(r.statusCode)})"CMD ["npm","start"]